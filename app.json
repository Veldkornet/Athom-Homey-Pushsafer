{
    "id": "de.appzer.pushsafer",
    "name": {
        "en": "Pushsafer Notifications"
    },
    "version": "0.0.2",
    "compatibility": "0.x || 1.x",
    "author": {
        "name": "Kevin Siml",
        "email": "support@pushsafer.com"
    },
    "images": {
      "large": "./assets/images/large.jpg",
      "small": "./assets/images/small.jpg"
    },
    "category": "internet",
    "description": {
    "en": "Pushsafer notifications for Homey",
	"de": "Pushsafer Benachrichtungen für Homey",
    "nl": "Pushsafer notificatie voor Homey"
    },
    "permissions": ["homey:manager:ledring"
    ],
    "flow": {
        "actions": [
        {
            "id": "pushsaferSend",
            "title": {
                "en": "Pushsafer notification",
				"en": "Pushsafer Benachrichtungen",
                "nl": "Pushsafer notificatie"
            },
            "args": [
              {
                  "name":"message",
                  "type":"text",
                  "placeholder":{
                     "en":"Message",
					 "de":"Nachricht",
                     "nl":"Bericht"
                  }
               },
               {
                "name": "priority",
                "type": "dropdown",
                "values": [
                  { "id": "Normal", "label": { "en": "Normal" }},
                  { "id": "Lowest", "label": { "en": "Lowest" }},
                  { "id": "Low", "label": { "en": "Low" }},
                  { "id": "High", "label": { "en": "High" }}
                ],
                "placeholder": { "en": "Priority" }
              }
            ]
        },
        {
            "id": "pushsaferSend_device",
            "title": {
                "en": "Pushsafer notification (Device)",
				"de": "Pushsafer Benachrichtung (Gerät)",
                "nl": "Pushsafer notificatie (Apparaat)"
            },
            "args": [
              {
                  "name":"device",
                  "type":"autocomplete",
                  "placeholder":{
                     "en":"Device or Device Group ID",
					 "de":"Device name",
                     "nl":"Apparaat naam"
                  }
            	},
            	{
                  "name":"message",
                  "type":"text",
                  "placeholder":{
                     "en":"Message",
					 "en":"Nachricht",
                     "nl":"Bericht"
                  }
               },
               {
                "name": "priority",
                "type": "dropdown",
                "values": [
                  { "id": "Normal", "label": { "en": "Normal" }},
                  { "id": "Lowest", "label": { "en": "Lowest" }},
                  { "id": "Low", "label": { "en": "Low" }},
                  { "id": "High", "label": { "en": "High" }}
                ],
                "placeholder": { "en": "Priority" }
              }
            ]
        }
      ]
    },
    "dependencies": {
    		"pushsafer-notifications": "*",
    		"http.min": "*"
    }
}
